<style>
@charset "UTF-8";
html {
  line-height: 1.15;
  -webkit-text-size-adjust: 100%;
}
* {
  box-sizing: border-box;
}
body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
}
.container {
  margin: 20px auto 0;
  max-width: 700px;
}
.text-primary {
  color: #31A6FC;
}
.text-danger {
  color: #FF1919;
}
.hide {
  display: none;
}
.no-border-bottom {
  border-bottom: unset !important;
}
.no-border {
  border: unset !important;
}
.no-padding {
  padding: 0 !important;
}
.navbar {
  padding: 10px 0 12px;
  border-bottom: 1px solid #ECECEC;
}
.navbar__container {
  max-width: 750px;
  margin: 0 auto;
}
.navbar__container:after {
  content: ".";
  visibility: hidden;
  display: block;
  height: 0;
  clear: both;
}
.navbar__left {
  width: 70%;
  float: left;
}
.navbar__right {
  width: 30%;
  float: left;
  text-align: right;
}
.flash_message {
  padding: 20px;
  color: #FFF;
  margin-bottom: 20px;
}
.flash_message__notice {
  background-color: #93D752;
}
.flash_message__alert {
  background-color: #E74949;
}
form {
  padding-top: 20px;
}
.form__actions {
  margin-top: 20px;
  margin-bottom: 20px;
}
.form__field {
  position: relative;
  margin-bottom: 45px;
}
.form__control {
  font-size: 18px;
  padding: 10px 10px 10px 5px;
  display: block;
  width: 700px;
  border: none;
  border-bottom: 1px solid rgba(0, 0, 0, 0.182353);
}
.form__control: focus {
  outline: none;
}
.form__label {
  color: rgba(0, 0, 0, 0.182353);
  font-size: 18px;
  font-weight: normal;
  position: absolute;
  pointer-events: none;
  left: 5px;
  top: 10px;
  transition: 0.2s ease all;
  -moz-transition: 0.2s ease all;
  -webkit-transition: 0.2s ease all;
}
.form__control:focus ~ .form__label, .form__control:valid ~ .form__label {
  top: -20px;
  font-size: 14px;
  color: #31A6FC;
}
.form__bar {
  position: relative;
  display: block;
  width: 700px;
}
.form__bar:before, .form__bar:after {
  content: "";
  height: 2px;
  width: 0;
  bottom: 1px;
  position: absolute;
  background: #31A6FC;
  transition: 0.2s ease all;
  -moz-transition: 0.2s ease all;
  -webkit-transition: 0.2s ease all;
}
.form__bar:before {
  left: 50%;
}
.form__bar:after {
  right: 50%;
}
.form__control:focus ~ .form__bar:before, .form__control:focus ~ .form__bar:after {
  width: 50%;
}
.field_with_errors .form__control {
  border-bottom-color: #FF1919;
}
.field_with_errors .form__label {
  color: #FF1919;
}
.form__highlight {
  position: absolute;
  height: 60%;
  width: 100px;
  top: 25%;
  left: 0;
  pointer-events: none;
  opacity: 0.5;
}
.form__control:focus ~ .form__highlight {
  -webkit-animation: inputHighlighter 0.3s ease;
  -moz-animation: inputHighlighter 0.3s ease;
  animation: inputHighlighter 0.3s ease;
}
@-webkit-keyframes inputHighlighter {
  from {
    background: #31A6FC;
  }
  to {
    width: 0;
    background: transparent;
  }
}
@-moz-keyframes inputHighlighter {
  from {
    background: #31A6FC;
  }
  to {
    width: 0;
    background: transparent;
  }
}
@keyframes inputHighlighter {
  from {
    background: #31A6FC;
  }
  to {
    width: 0;
    background: transparent;
  }
}
.form__button {
  color: rgba(0, 0, 0, 0.482353);
  font-size: 16px;
  padding: 0 14px;
  line-height: 34px;
  height: 36px;
  border-radius: 4px;
  background-color: #FFF;
  display: inline-block;
  text-decoration: none;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  cursor: pointer;
}
.form__button--primary {
  color: #31A6FC;
  border: 1px solid #31A6FC;
}
.form__button--secondary {
  border: 1px solid rgba(0, 0, 0, 0.482353);
}
.form__button--main {
  color: #4169e1;
  border: 1px solid #4169e1;
}
.form__button--danger {
  color: #FF1919;
  border: 1px solid #FF1919;
}
.form__button--xs {
  font-size: 13px;
  height: 20px;
  line-height: 18px;
}
.form__button--sm {
  font-size: 14.5px;
  height: 30px;
  line-height: 30px;
}
.form__button--lg {
  font-size: 18px;
  padding: 0 18px 18px;
}
.form__button--xl {
  font-size: 20px;
  padding: 0 20px 20px;
}
</style>